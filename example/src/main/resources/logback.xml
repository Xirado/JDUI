<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %boldCyan(%-15.-15thread) %boldGreen(%-15.-15logger{0}) %highlight(%-5level) %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="at.xirado.jdui" level="trace"/>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>